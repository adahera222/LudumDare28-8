<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="LudumDare28" package="com.example.app" version="1.0.0" company="" />
	
 	<app file="Main" main="Main" path="export" />
	
	<window fps="30" background="0x00AAFF" />
	<window width="640" height="480" resizable="true" unless="mobile" />
	<window fullscreen="true" if="mobile" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />
	
	<source path="source" />
	
	<haxelib name="openfl" />
	<haxelib name="openfl-bitfive" if="html5" />
	<haxelib name="HaxePunk" />
	<haxelib name="HaxePunkTmx" />
	
	<assets path="assets/images" rename="images" include="*.png" />
	
	<assets path="assets/sounds" unless="flash">
		<sound path="title.ogg" id="title" />
		<sound path="blaster.ogg" id="blaster" />
	</assets>
	
	<assets path="assets/sounds" if="flash">
		<sound path="title.mp3" id="title" />
		<sound path="blaster.mp3" id="blaster" />
	</assets>
	
	<assets path="assets/font" rename="font" include="*.ttf" />
	<assets path="assets/maps" rename="maps" include="*.tmx" />
	
	<icon path="assets/HaxePunk.svg" />
</project>
